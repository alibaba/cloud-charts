{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@alicloud/cloud-charts": ["src/"] // 此处映射是相对于"baseUrl"
    }
  },
  "include": ["src/*.ts", "src/*.tsx"],
  "exclude": ["node_modules", "build", "public"]
}
